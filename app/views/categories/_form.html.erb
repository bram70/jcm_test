
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @category do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name%>
  <%= f.label :keywords%>
  <%= f.collection_select :keywords, @keywords, :id, :phrase, :multiple => true %>

  
<div class="modal-footer">
   <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>

   <%= submit_tag "#{@category.new_record? ? 'Create':'Update'} Category", :class => "btn btn-primary"%>
 </div>
<%end%>

<h1>Categories#new</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @category do |f| %>
  <%= f.label :name%>
  <%= f.text_field :name%>
  <%= f.label :keyword%>
  <%= f.text_field :keyword%>

  
  <%= f.submit%>
<%end%>


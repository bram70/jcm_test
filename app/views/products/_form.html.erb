
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @product do |f| %>
  <p>
  <%= f.label :name%>
  <%= f.text_field :name%>
  </p>
  <p>
  <%= f.label :color%>
  <%= f.text_field :color%>
  </p>
  <p>
  <%= f.label :size%>
  <%= f.select :size, Product::SIZE_TYPES%>
  </p>
  <p>
  <%= f.label :price%>
  <%= f.text_field :price%>
  </p>
  <p>
  <%= f.label :category%>
  <%= f.collection_select :category, @categories, :id, :name%>
  </p>
  <p>
  <%= f.label :stores%>
  <%= f.select :store_ids, 
    Store.all.map { |k| [k.name, k.id] },
                    { include_blank: true },
                    { multiple: true, class: 'chosen-select' } %>



  </p>
  
  <%= submit_tag "#{@product.new_record? ? 'Create':'Update'} Product"%>
<%end%>

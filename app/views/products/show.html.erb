<div class="container">
<h1>Products details</h1>

<p>
  Name: <% @product.name %>
</p>
<p>
  Color: <% @product.color %>
</p>
<p>
  Size: <% @product.size %>
</p>
<p>
  Price: <% @product.price %>
</p>
<p>
  Category: <% @product.category %>
</p>

<%= button_to "Edit Product", edit_product_path(@product.id), method: :get %>
<%= button_to "Delete Product", products_destroy_path, method: :delete %>

</div>
